<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/bottom_sheet_divider_height"
              android:orientation="horizontal">

    <View
        android:id="@+id/left_divider"
        android:layout_width="@dimen/bottom_sheet_divider_indent"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:background="@color/divider_light"/>

    <TextView
        android:id="@android:id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:paddingEnd="@dimen/bottom_sheet_divider_title_horizontal_padding"
        android:paddingLeft="@dimen/bottom_sheet_divider_title_horizontal_padding"
        android:paddingRight="@dimen/bottom_sheet_divider_title_horizontal_padding"
        android:paddingStart="@dimen/bottom_sheet_divider_title_horizontal_padding"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/divider_light"/>

    <View
        android:id="@+id/right_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@color/divider_light"/>

</LinearLayout>